
<div class="container mt-5">
  <h2>Mira las solicitudes hechas por <%= @client.name %></h2>
  <% @deals.each do |d| %>
  <div class="card my-3">
      <div class="card-body">
        <h5 class="card-title">Cantidad de Bagazo: <%= d.deal_quantity %></h5>
        <p class="card-titlet">Fecha de retiro: <%= d.deal_date %>.</p>
        <% if d.confirmation %>
        <p class="card-text">Estado de la solicitud: Confirmada </p>
        <% else %>
        <p class="card-text">Estado de la solicitud: Pendiente </p>
        <%= link_to "Confirmar retiro", edit_deal_path(d.id), class:"btn btn-primary" %>
      <% end %>
      </div> 
  </div>
  <% end %>
</div>

