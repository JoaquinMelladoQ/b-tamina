<div class="container">
    <h1>Clients#index</h1>
    <p>Find me in app/views/clients/index.html.erb</p>
    <h1>Para el Cervecero</h1>

    <% @clients.each do |c| %>
    <div class="card">
        <div class="card-header">
          <%= link_to "#{c.name}", show_client_path(c.id) %> 
        </div>
        <div class="card-body">
          <h5>Email: <%= c.email %></h5>
          <h5>Address: <%= c.address %></h5>
          <h5 class="card-title">Number of Deals: <%= c.deals.count %></h5>
        </div>
      </div>
    <% end %> 

</div>

